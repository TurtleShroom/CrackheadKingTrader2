      <StuffEffectMultiplierInsulation_Heat>0.9</StuffEffectMultiplierInsulation_Heat>
	  <ArmorRating_Heat>18</ArmorRating_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
	<equippedStatOffsets>
      <WorkSpeedGlobal>-0.05</WorkSpeedGlobal>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Hands</li>
      </bodyPartGroups>
      <layers>
